<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Studentenmaaltijd</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.deep_orange-light_green.min.css" />
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">

    <link rel="stylesheet" href="~/css/LayoutStyle.css" type="text/css" />
</head>
<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer">
        <header class="mdl-layout__header">
            <div class="mdl-layout__header-row">
                <span class="mdl-layout-title">@ViewData["Title"]</span>
                <div class="mdl-layout-spacer"></div>
            </div>
        </header>
        <div class="mdl-layout__drawer mdl-color--white">
            @if (this.User.Identity.Name == null) {
                <span class="mdl-layout-title">Studentenmaaltijd</span>
            } else {
                <div class="mdl-layout--account-info mdl-color--grey-200">
                    <div>
                        <span class="mdl-chip__contact mdl-chip__contact-large mdl-color--light-green-A200 mdl-color-text--black">@this.User.Identity.Name[0]</span>
                        <br>
                        <span class="username">@this.User.Identity.Name</span>
                    </div>
                </div>
            }
            <nav class="mdl-navigation">
                <a class="mdl-navigation__link @(ViewData["Title"] == "Start" ? "mdl-color--grey-200" : "")" asp-controller="Home" asp-action="Index">Start</a>
                @if (this.User.Identity.Name == null) {
                    <a class="mdl-navigation__link @(ViewData["Title"] == "Inloggen" ? "mdl-color--grey-200" : "")" asp-controller="Account" asp-action="Login">Inloggen</a>
                    <a class="mdl-navigation__link @(ViewData["Title"] == "Registreren" ? "mdl-color--grey-200" : "")" asp-controller="Account" asp-action="Register">Registreren</a>
                } else {
                    <a class="mdl-navigation__link" asp-controller="Account" asp-action="Logout">Uitloggen</a>
                }
            </nav>
        </div>
        <main class="mdl-layout__content">
            <div class="page-content">
                @RenderBody()
            </div>
        </main>
        <div class="mdl-js-snackbar mdl-snackbar">
            <div class="mdl-snackbar__text"></div>
            <button class="mdl-snackbar__action" type="button"></button>
        </div>
    </div>
</body>
</html>
